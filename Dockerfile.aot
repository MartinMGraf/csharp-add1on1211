# Build-Stage
FROM --platform=linux/arm64 mcr.microsoft.com/dotnet/aspnet:9.0.7-alpine3.22-arm64v8 as build
WORKDIR /app

RUN apk add clang build-base zlib-dev

# Copy the project
COPY example/src/*.csproj ./
RUN dotnet restore

# Copy rest of the code
COPY example/src/. ./
RUN dotnet publish -c Release -o /app/publish

